<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.pccoe.idis.activity.IDISActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:height="@dimen/sis_btn_height"
        android:elegantTextHeight="false"
        android:background="@android:color/holo_red_dark"
        android:clickable="true"
        android:enabled="true"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WATER LEVEL"
        android:id="@+id/waterLevel_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/start_btn"
        android:layout_alignEnd="@+id/start_btn"
        android:layout_below="@+id/start_btn"
        android:height="@dimen/sis_btn_height"
        android:background="@android:color/holo_blue_dark"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENSOR STATUS"
        android:id="@+id/sensorStatus_btn"
        android:layout_below="@+id/waterLevel_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/waterLevel_btn"
        android:layout_alignEnd="@+id/waterLevel_btn"
        android:height="@dimen/sis_btn_height"
        android:background="@android:color/holo_green_dark"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stop_btn"
        android:layout_below="@+id/sensorStatus_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sensorStatus_btn"
        android:layout_alignEnd="@+id/sensorStatus_btn"
        android:height="@dimen/sis_btn_height"
        android:background="@android:color/holo_purple"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:clickable="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/logout__btn"
        android:layout_below="@+id/stop_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/stop_btn"
        android:layout_alignEnd="@+id/stop_btn"
        android:height="@dimen/sis_btn_height"
        android:background="@android:color/holo_orange_dark"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:clickable="true"
        android:enabled="true" />

</RelativeLayout>
